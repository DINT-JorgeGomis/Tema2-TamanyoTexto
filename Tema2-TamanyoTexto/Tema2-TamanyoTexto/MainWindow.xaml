<Window x:Class="Tema2_TamanyoTexto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tema2_TamanyoTexto"
        mc:Ignorable="d"
        Title="Tamanyo texto" Height="314" Width="800">
    <Grid>
        <Label x:Name="textoLabel" Content="Cambia el tamaño del texto" HorizontalAlignment="Center" Margin="0,21,0,0" VerticalAlignment="Top" Height="43" Width="780" FontFamily="Goudy Stout" FontSize="20" Foreground="#FF440606"/>
        <RadioButton Content="Pequeño" Margin="81,129,573,96" RenderTransformOrigin="0.5,0.5" GroupName="TamañoTexto" FontFamily="Segoe UI Semibold" FontSize="20" VerticalContentAlignment="Center" Tag="pequeño" Checked="textoRadioButtonChecked"/>
        <RadioButton Content="Grande" Margin="569,129,85,95" RenderTransformOrigin="0.5,0.5" GroupName="TamañoTexto" FontFamily="Segoe UI Semibold" FontSize="20" VerticalContentAlignment="Center" Tag="grande" Checked="textoRadioButtonChecked"/>
        <RadioButton Content="Mediano" Margin="316,129,338,96" RenderTransformOrigin="0.5,0.5" GroupName="TamañoTexto" FontFamily="Segoe UI Semibold" FontSize="20" VerticalContentAlignment="Center" Tag="mediano" Checked="textoRadioButtonChecked" IsChecked="True"/>

    </Grid>
</Window>
